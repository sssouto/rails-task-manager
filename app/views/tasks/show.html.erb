<div style="width: 100%; overflow: hidden;">
     <div style="width: 600px; float: left;"> <h1><%= @task.title %></h1></div>
     <div style="margin-left: 620px;"> 🖍 <%= link_to 'Edit', edit_task_path(@task) %> </div>
</div>


<div class="details">
  <p><%= @task.details %></p>
</div>

<% if @task.completed %>
      <p><%= '✅ This task is completed' %></p>
    <% else %>
      <p><%= '🟩 This task is not completed yet' %></p>
    <% end %>

<p>⏪ <%= link_to 'Back to list', tasks_path %></p>